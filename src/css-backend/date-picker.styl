.pika-single {
  z-index: 9999;
  display: block;
  position: relative;
  color: #333;
  background: #fff;
  // border: 1px solid #ccc;
  // border-bottom-color: #bbb;

  &::before,
  &::after {
    content: " ";
    display: table;
  }
  &::after {
    clear: both;
  }
  &.is-hidden {
    display: none;
  }
  &.is-bound {
    position: absolute;
    panel-shadow();
  }
}

.pika-lendar {
  float: left;
  width: 240px;
  margin: 8px;
}

.pika-title {
  position: relative;
  text-align: center;
  background: white;

  select {
    cursor: pointer;
    position: absolute;
    z-index: 9998;
    margin: 0;
    left: 0;
    top: 5px;
    opacity: 0;
  }
}

.pika-label {
  display: inline-block;
  position: relative;
  z-index: 9999;
  overflow: hidden;
  margin: 0;
  padding: 5px 3px;
  font-size: 14px;
  line-height: 20px;
  font-weight: bold;
}

.pika-prev,
.pika-next {
  display: block;
  cursor: pointer;
  position: relative;
  outline: none;
  border: 0;
  padding: 0;
  width: 20px;
  height: 30px;
  /* hide text using text-indent trick, using width value (it's enough) */
  text-indent: 20px;
  white-space: nowrap;
  overflow: hidden;
  background-color: transparent;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 75% 75%;
  opacity: .5;
}

.pika-prev:hover,
.pika-next:hover {
  opacity: 1;
}

.pika-prev,
.is-rtl .pika-next {
  float: left;
  background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAeCAYAAAAsEj5rAAAAUklEQVR42u3VMQoAIBADQf8Pgj+OD9hG2CtONJB2ymQkKe0HbwAP0xucDiQWARITIDEBEnMgMQ8S8+AqBIl6kKgHiXqQqAeJepBo/z38J/U0uAHlaBkBl9I4GwAAAABJRU5ErkJggg==');
}

.pika-next,
.is-rtl .pika-prev {
  float: right;
  background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAeCAYAAAAsEj5rAAAAU0lEQVR42u3VOwoAMAgE0dwfAnNjU26bYkBCFGwfiL9VVWoO+BJ4Gf3gtsEKKoFBNTCoCAYVwaAiGNQGMUHMkjGbgjk2mIONuXo0nC8XnCf1JXgArVIZAQh5TKYAAAAASUVORK5CYII=');
}

.pika-prev.is-disabled,
.pika-next.is-disabled {
  cursor: default;
  opacity: .2;
}

.pika-select {
  display: inline-block;
}

.pika-table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
  border: 0;

  th,
  td {
    width: 14.285714285714286%;
    padding: 0;
  }
  th {
    color: $grey-lighter;
    font-size: 12px;
    line-height: 25px;
    text-align: center;
  }
}

.pika-button {
  cursor: pointer;
  display: block;
  outline: none;
  border: 0;
  margin: 0;
  width: 100%;
  padding: 5px;
  font-size: 12px;
  height: 34px;
  width: @height;
  text-align: center;
  background: transparent;

  &:hover {
    color: white;
    background: $accent;
    box-shadow: none;
    border-radius: 50%;
  }

  .is-today & {
    font-weight: bold;
  }
  .is-selected & {
    color: $accent;
    font-weight: bold;
  }
  .is-inrange & {
    background: #D5E9F7;
  }

  .is-startrange & {
    color: #fff;
    background: #6CB31D;
    box-shadow: none;
    border-radius: 3px;
  }

  .is-endrange & {
    color: #fff;
    background: #33aaff;
    box-shadow: none;
    border-radius: 3px;
  }

  .is-disabled & {
    pointer-events: none;
    cursor: default;
    color: #999;
    opacity: .3;
  }
}

.pika-week {
  font-size: 11px;
  color: #999;
}



/* styling for abbr */
.pika-table abbr {
  border-bottom: none;
  cursor: help;
}
