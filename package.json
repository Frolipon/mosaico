{
  "name": "mosaico",
  "version": "0.14.0",
  "description": "Free Email Template Editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/goodenough/mosaico.git"
  },
  "main": "./index.js",
  "engines": {
    "node": "0.12.0"
  },
  "directories": {
    "test": "test"
  },
  "aliasify": {
    "aliases": {
      "console": "console-browserify/index.js",
      "jsep": "jsep/src/jsep.js",
      "knockoutjs-reactor": "knockoutjs-reactor/src/knockout.reactor.js"
    }
  },
  "browserify": {
    "transform": [
      "aliasify",
      "browserify-shim",
      "debowerify"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery",
    "jquery-ui/sortable": "global:jQuery.ui.sortable",
    "jquery-ui/draggable": "global:jQuery.ui.draggable",
    "jquery-ui/spinner": "global:jQuery.ui.spinner",
    "jquery-ui/tabs": "global:jQuery.ui.tabs",
    "knockout": "global:ko",
    "evol-colorpicker": {},
    "knockout-jqueryui": "global:kojqui",
    "tinymce": "global:tinymce"
  },
  "scripts": {
    "bower": "bower-npm-install --non-interactive",
    "deps": "export NODE_ENV=development && npm install && bower-npm-install --non-interactive",
    "test": "grunt jasmine_node",
    "build": "npm run deps && gulp build --prod",
    "start": "export NODE_ENV=production && node server/index.js",
    "prod": "npm run build && npm start",
    "dev": "parallelshell \"gulp build\" \" gulp dev\"",
    "release": "./bin/dist.sh",
    "build-release": "npm run build && gulp --gulpfile gulpfile-deploy.js"
  },
  "dependencies": {
    "aws-sdk": "^2.3.19",
    "blueimp-file-upload-expressjs": "git://github.com/arvindr21/blueimp-file-upload-expressjs#08533d63757b514bc09f55b10e8005df8c60174a",
    "body-parser": "^1.15.1",
    "chalk": "^1.1.1",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.13.3",
    "express-error-handler": "^1.0.1",
    "gm": "^1.21.1",
    "i18n": "^0.8.2",
    "jade": "^1.11.0",
    "lodash": "^4.13.1",
    "mkdirp": "^0.5.1",
    "mongoose": "^4.4.20",
    "morgan": "^1.6.1",
    "nodemailer": "^2.4.2",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "rc": "^1.1.6",
    "serve-favicon": "^2.3.0",
    "styliner": "^0.8.9"
  },
  "devDependencies": {
    "aliasify": "^1.7.2",
    "async": "0.9.0",
    "autoprefixer": "^6.3.1",
    "autoprefixer-core": "^6.0.1",
    "bower": "^1.7.9",
    "bower-npm-install": "^0.5.11",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "browserify-shim": "^3.8.12",
    "cheerio": "^0.20.0",
    "connect-livereload": "0.5.3",
    "csswring": "^4.2.1",
    "deamdify": "0.1.1",
    "debowerify": "1.2.0",
    "del": "^2.2.0",
    "grunt": "0.4.5",
    "grunt-bowercopy": "1.2.0",
    "grunt-browserify": "4.0.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-connect": "0.9.0",
    "grunt-contrib-copy": "^0.8.1",
    "grunt-contrib-jshint": "0.11.2",
    "grunt-contrib-less": "1.0.1",
    "grunt-contrib-watch": "0.6.1",
    "grunt-exorcise": "2.0.0",
    "grunt-express": "1.4.0",
    "grunt-jasmine-node-coverage": "0.4.1",
    "grunt-newer": "1.1.1",
    "grunt-postcss": "0.6.0",
    "gulp": "^3.9.0",
    "gulp-bump": "^2.1.0",
    "gulp-concat": "^2.6.0",
    "gulp-filter": "^4.0.0",
    "gulp-if": "^2.0.1",
    "gulp-less": "^3.1.0",
    "gulp-load-plugins": "^1.2.4",
    "gulp-minify-css": "^1.2.3",
    "gulp-nodemon": "^2.1.0",
    "gulp-order": "^1.1.1",
    "gulp-plumber": "^1.0.1",
    "gulp-postcss": "^6.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.1",
    "gulp-util": "^3.0.7",
    "jasmine-core": "2.3.4",
    "jasmine-node": "1.14.5",
    "jshint-stylish": "2.0.1",
    "lazypipe": "^1.0.1",
    "load-grunt-tasks": "3.1.0",
    "main-bower-files": "^2.11.1",
    "merge-stream": "^1.0.0",
    "mockery": "1.4.0",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "phantomjs": "1.9.16",
    "run-sequence": "^1.2.1",
    "through2": "^2.0.0",
    "uglifyify": "3.0.1",
    "url": "^0.11.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0",
    "yargs": "^4.7.1"
  },
  "author": "Stefano Bagnara",
  "license": "GPL-3.0"
}
