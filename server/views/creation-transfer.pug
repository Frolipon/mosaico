extends _layout-admin.pug

block vars
  - var pageClass = 'creation-transfer'
  - var pageTitle = `transfer mailing`

block content
  - const { users, creation } = data
  .page-content
    form.mdl-cell.mdl-cell--6-col.mdl-cell--3-offset.mdl-card.mdl-shadow--2dp(action=creation.url.transfer method="post")
      .mdl-card__title: .mdl-card__title-text= `mailing: ${creation.name}`

      fieldset.mdl-card__supporting-text

        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            select#userId-field(
              name="userId"
            ).mdl-textfield__input
              each user in users
                option(value=user._id)= user.fullname
            label(for="userId-field").mdl-textfield__label= __('filter.author')

      .mdl-card__actions.mdl-card--border
        button.mdl-button.mdl-button--accent.mdl-js-button.mdl-js-ripple-effect transfer

