
.bs-table__header.bs-table__header--selection.js-line-actions

  h4.bs-table-header__title.bs-table-header__title.js-selection-count

  div

    button#set-label.mdl-button.mdl-js-button.mdl-button--icon.mdl-button--accent.js-open-tags-panel(type="button")
      i.material-icons label
    span(for="set-label").mdl-tooltip.mdl-tooltip--large #Set tags

    //- button#delete-creation.mdl-button.mdl-js-button.mdl-button--icon.mdl-button--accent(type="submit" formaction="/creations?_method=DELETE")
    //-   i.material-icons delete
    //- span(for="delete-creation").mdl-tooltip.mdl-tooltip--large delete mailings

  dl.bsTagsPanel.js-tags
    dt.bsTagsPanel__title
     span #Tags
     button.mdl-button.mdl-js-button.mdl-button--icon.js-close-tags-panel(type="button")
      i.material-icons close
    dd.bsTagsPanel__listWrapper: ul.bsTagsPanel__list.js-tags-list
      each tag in tagsList
        //- WARN
        //- this markup is copied in the front-end
        //- see template function in tags.js
        li.bsTagsPanel__item.bs-tags-input.js-check-tag
          //- WARN
          //- `tag-` prefix is used backend in creations.js
          //- and frontend in tags.js
          input(type="radio"  name=`tag-${tag}` value="remove" checked)
          input(type="radio"  name=`tag-${tag}` value="unchange" )
          input(type="radio"  name=`tag-${tag}` value="add" )
          span.bs-tags-input__title= tag

    dd.bsTagsPanel__actions
      button.js-open-tag-dialog.mdl-button.mdl-js-button.mdl-js-ripple-effect(type="button") #New tag
      button.mdl-button.mdl-js-button.mdl-button--accent(
        type="submit"
        formaction=mergeQueries('/creations', _query, { _method: 'PATCH', })
      )
        | #Apply


